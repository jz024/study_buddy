{
  "name": "ai-study-buddy",
  "version": "1.0.0",
  "description": "AI Study Buddy - Intelligent web-based learning platform with AI-powered chat, flashcards, and quizzes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:full": "concurrently \"npm run dev\" \"cd frontend && npm start\"",
    "seed": "node backend/seeds/seedDatabase.js",
    "test": "jest",
    "build": "cd frontend && npm install && npm run build",
    "build:prod": "npm run build && node server.js",
    "heroku-postbuild": "cd frontend && npm install && npm run build",
    "vercel-build": "cd frontend && npm install && npm run build"
  },
  "keywords": ["ai", "education", "study", "learning", "web-app", "react", "node", "mongodb", "openai", "chatgpt", "flashcards", "quiz"],
  "author": "AI Study Buddy Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.0",
    "openai": "^4.20.1",
    "multer": "^1.4.4",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.5.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "express-rate-limit": "^6.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  }
} 